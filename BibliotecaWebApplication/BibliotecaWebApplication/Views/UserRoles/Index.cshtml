@model IEnumerable<BibliotecaWebApplication.Models.ViewModels.UserRolesViewModel>

@{
    ViewData["Title"] = "Administrar Roles de Usuario";
}

<div class="container p-4">
    <h2 class="text-center text-uppercase mb-4">Administrar Roles de Usuario</h2>

    <table id="dataTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Roles)</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <td class="text-center">
                        <a asp-action="Manage" asp-route-userId="@user.UserId" class="btn btn-custom btn-manage btn-sm">
                            <i class="fas fa-cogs"></i> Administrar Roles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ entradas por página",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "infoEmpty": "Mostrando 0 a 0 de 0 entradas",
                    "infoFiltered": "(filtrado de _MAX_ entradas totales)",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}

<style>
    .btn-custom {
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-manage {
        background-color: #007bff; /* Azul primario */
        border: none;
        color: white;
    }

        .btn-manage:hover {
            background-color: #0056b3; /* Azul oscuro */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .container {
        max-width: 1200px;
        margin: auto;
    }

    h2 {
        font-size: 2rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .table {
        border-collapse: separate;
        border-spacing: 0;
        border: 1px solid #ced4da;
    }

        .table th, .table td {
            vertical-align: middle;
            border: 1px solid #ced4da;
        }

        .table th {
            background-color: #f8f9fa;
            color: #495057;
        }

        .table td {
            background-color: #ffffff;
            color: #212529;
        }
</style>
