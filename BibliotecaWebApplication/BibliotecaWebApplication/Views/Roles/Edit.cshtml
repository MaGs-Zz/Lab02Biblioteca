@model BibliotecaWebApplication.Models.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "Editar Rol";
}

<div class="bg-light min-vh-100 d-flex flex-column justify-content-center align-items-center">
    <h2 class="text-center text-uppercase mb-4">Editar Rol</h2>

    <div class="w-50">
        <hr class="bg-secondary" />
        <form asp-action="Edit" asp-controller="Roles" method="post" class="bg-white p-4 border rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control bg-light border" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <br />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-custom btn-save"><i class="fas fa-save"></i> Guardar</button>
                <a asp-action="Index" class="btn btn-custom btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-custom {
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-save {
        background-color: #28a745;
        border: none;
        color: white;
    }

        .btn-save:hover {
            background-color: #218838;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .btn-back {
        background-color: #6c757d;
        border: none;
        color: white;
        margin-left: 10px;
    }

        .btn-back:hover {
            background-color: #5a6268;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .min-vh-100 {
        min-height: 100vh;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    form {
        border: 1px solid #ced4da;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        background-color: #f8f9fa;
    }

    .bg-white {
        background-color: #ffffff;
    }

    .border {
        border: 1px solid #ced4da;
    }

    .rounded {
        border-radius: 0.25rem;
    }

    .shadow-sm {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>
