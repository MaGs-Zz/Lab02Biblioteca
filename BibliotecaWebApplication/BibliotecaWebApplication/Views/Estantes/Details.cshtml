@model BibliotecaWebApplication.Models.Estante

@{
    ViewData["Title"] = "Detalles del Estante";
}

<div class="bg-light min-vh-100 d-flex flex-column justify-content-center align-items-center">
    <h2 class="text-center text-uppercase mb-4">Detalles del Estante</h2>

    <div class="w-50">
        <hr class="bg-secondary" />
        <dl class="row bg-white p-4 border rounded shadow-sm">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CodigoEstante)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CodigoEstante)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Estanteria)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Estanteria.EstanteriaId)
            </dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.EstanteId" class="btn btn-custom btn-edit"><i class="fas fa-edit"></i> Editar</a>
            <a asp-action="Index" asp-route-id="@Model?.EstanteId" class="btn btn-custom btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
        </div>
    </div>
</div>

<style>
    .btn-custom {
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-edit {
        background-color: #007bff;
        border: none;
        color: white;
    }

        .btn-edit:hover {
            background-color: #0056b3;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .btn-back {
        background-color: #6c757d;
        border: none;
        color: white;
        margin-left: 10px;
    }

        .btn-back:hover {
            background-color: #5a6268;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .min-vh-100 {
        min-height: 100vh;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    dl {
        border: 1px solid #ced4da;
    }

    .bg-secondary {
        background-color: #6c757d;
    }
</style>
