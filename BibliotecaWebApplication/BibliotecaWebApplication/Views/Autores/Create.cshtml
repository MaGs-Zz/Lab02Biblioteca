@model BibliotecaWebApplication.Models.Autor

@{
    ViewData["Title"] = "Crear Autor";
}

<div class="min-vh-100 d-flex flex-column justify-content-center align-items-center p-4">
    <h2 class="text-center text-uppercase mb-4">Crear Autor</h2>

    <form asp-action="Create" enctype="multipart/form-data" class="w-50">
        <div class="form-horizontal bg-light p-4 rounded border border-secondary shadow-sm">
            <hr class="bg-secondary" />
            <div class="form-group row mb-3">
                <label asp-for="Nombres" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Nombres" class="form-control bg-light border border-secondary" />
                    <span asp-validation-for="Nombres" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Apellidos" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Apellidos" class="form-control bg-light border border-secondary" />
                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Nacionalidad" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input asp-for="Nacionalidad" class="form-control bg-light border border-secondary" />
                    <span asp-validation-for="Nacionalidad" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-md-12 d-flex justify-content-between">
                    <button type="submit" class="btn btn-create"><i class="fas fa-save"></i> Guardar</button>
                    <a asp-action="Index" class="btn btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-create {
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        background-color: #007bff;
        border: none;
        color: white;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-create:hover {
            background-color: #0069d9;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .btn-back {
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        background-color: #6c757d;
        border: none;
        color: white;
        margin-left: 10px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-back:hover {
            background-color: #5a6268;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .min-vh-100 {
        min-height: 100vh;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .form-control {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }

    .form-horizontal {
        border: 1px solid #ced4da;
    }
</style>
