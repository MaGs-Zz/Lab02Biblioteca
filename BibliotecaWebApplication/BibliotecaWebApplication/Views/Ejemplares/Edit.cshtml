@model BibliotecaWebApplication.Models.Ejemplar

@{
    ViewData["Title"] = "Editar Ejemplar";
}

<div class="bg-light min-vh-100 d-flex flex-column justify-content-center align-items-center">
    <h2 class="text-center text-uppercase mb-4">Editar Ejemplar</h2>

    <div class="w-50">
        <hr class="bg-secondary" />
        <form asp-action="Edit" enctype="multipart/form-data" class="bg-white p-4 border rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="EjemplarId" />

            <div class="form-group mb-3">
                <label asp-for="PublicacionId" class="form-label"></label>
                <select asp-for="PublicacionId" class="form-control bg-light border" asp-items="ViewBag.PublicacionId"></select>
                <span asp-validation-for="PublicacionId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EstanteId" class="form-label"></label>
                <select asp-for="EstanteId" class="form-control bg-light border" asp-items="ViewBag.EstanteId"></select>
                <span asp-validation-for="EstanteId" class="text-danger"></span>
            </div>

            <br />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-custom btn-save"><i class="fas fa-save"></i> Guardar</button>
                <a asp-action="Index" class="btn btn-custom btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-custom {
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-save {
        background-color: #28a745;
        border: none;
        color: white;
    }

        .btn-save:hover {
            background-color: #218838;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .btn-back {
        background-color: #6c757d;
        border: none;
        color: white;
        margin-left: 10px;
    }

        .btn-back:hover {
            background-color: #5a6268;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .min-vh-100 {
        min-height: 100vh;
    }

    h2 {
        font-size: 2.5rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    form {
        border: 1px solid #ced4da;
    }
</style>
