@model BibliotecaWebApplication.Models.Libro

@{
    ViewData["Title"] = "Eliminar Libro";
}

<div class="bg-light min-vh-100 d-flex flex-column justify-content-center align-items-center">
    <h1>Eliminar Libro</h1>

    <h3>¿Estás seguro de que deseas eliminar este libro?</h3>
    <div class="w-50">
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ISBN)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ISBN)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Formato)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Formato)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.NumeroPaginas)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.NumeroPaginas)
            </dd>
            <dt class="col-sm-4">
                Autores
            </dt>
            <dd class="col-sm-8">
                @foreach (var autorLibro in Model.AutorLibros)
                {
                    <span>@autorLibro.Autor.Nombres @autorLibro.Autor.Apellidos</span>
                    <br />
                }
            </dd>
        </dl>

        <form asp-action="Delete" class="d-flex justify-content-between">
            <input type="hidden" asp-for="LibroId" />
            <button type="submit" class="btn btn-delete"><i class="fas fa-trash-alt"></i> Eliminar</button>
            <a asp-action="Index" class="btn btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
        </form>
    </div>
</div>

<style>
    .btn-delete {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-delete:hover {
            background-color: #c82333;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .btn-back {
        background-color: #6c757d;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        margin-left: 10px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-back:hover {
            background-color: #5a6268;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .min-vh-100 {
        min-height: 100vh;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    h3 {
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    dl {
        border: 1px solid #ced4da;
        padding: 1rem;
        background-color: #fff;
    }

    dt {
        font-weight: bold;
        width: 30%;
    }

    dd {
        width: 70%;
    }

    .row {
        margin-bottom: 0.5rem;
    }
</style>
