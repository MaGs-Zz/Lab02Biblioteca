@model BibliotecaWebApplication.Models.Estanteria

@{
    ViewData["Title"] = "Eliminar Estantería";
}

<div class="bg-light min-vh-100 d-flex flex-column justify-content-center align-items-center">
    <h1>Eliminar Estantería</h1>

    <h3>¿Estás seguro de que deseas eliminar esta estantería?</h3>
    <div class="w-50">
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Alto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Alto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ancho)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ancho)
            </dd>
        </dl>

        <form asp-action="Delete" class="d-flex justify-content-between">
            <input type="hidden" asp-for="EstanteriaId" />
            <button type="submit" class="btn btn-delete"><i class="fas fa-trash-alt"></i> Eliminar</button>
            <a asp-action="Index" class="btn btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
        </form>
    </div>
</div>

<style>
    .btn-delete {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-delete:hover {
            background-color: #c82333;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .btn-back {
        background-color: #6c757d;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: bold;
        margin-left: 10px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-back:hover {
            background-color: #5a6268;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

    .min-vh-100 {
        min-height: 100vh;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    dl {
        border: 1px solid #ced4da;
        padding: 1rem;
        background-color: #fff;
    }

    dt {
        font-weight: bold;
    }
</style>
